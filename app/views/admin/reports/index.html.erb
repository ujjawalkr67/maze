         <span class="ml-3 font-medium">Manage Users</span>
       <% end %>


      <%= link_to admin_reports_path, class: "flex items-center px-4 py-3 rounded-lg mt-2 #{current_page?(admin_reports_path) ? 'bg-blue-500 text-white' : 'text-gray-700 hover:bg-gray-100'}" do %>
         <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
         </svg>
         <span class="ml-3 font-medium">Reports</span>
       <%end%>
      <% end %>


       <!-- Logout Button -->
        <% if user_signed_in? %>
        <%= button_to destroy_user_session_path, method: :delete, class: "flex items-center px-4 py-3 mt-6 text-gray-700 hover:bg-gray-100 rounded-lg w-full" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
         </svg>
         <span class="ml-3 font-medium">Logout</span>
       <%end%>
       <%end%>
     </div>
   </div>


 <!-- Main Content -->
 <div class="flex-1 flex flex-col">
  <!-- Top Header with Search -->
<div class="bg-white p-4 flex flex-col md:flex-row items-center  gap-y-4 md:gap-x-4 fixed top-0 left-0 md:left-64 right-0 h-auto md:h-16 z-10">
  <!-- Search Bar -->
  <div class="w-full md:flex-1 max-w-7xl">
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <img src="<%= asset_path('search.svg') %>" class="w-5 h-5 text-gray-400" alt="search">
      </div>
      <input 
        type="text" 
        class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
        placeholder="Search for something here..."
      >
    </div>
  </div>

  <!-- User Profile -->
  <div class="hidden md:flex items-center gap-x-2 md:ml-10">
    <img 
      src="<%= current_user.avatar.attached? ? url_for(current_user.avatar) : asset_path('icon.svg') %>" 
      class="md:w-8 md:h-10 rounded-full" 
      alt="profile"
    >
    <span class="ml-2 text-gray-700 font-medium hidden sm:block">
      <%= current_user.first_name %> <%= current_user.last_name %>
      <% if current_user.has_role?(:admin) %>
      <span class="block text-xs text-gray-500">Admin</span>
    <% end %>
    </span>
  </div>
</div>


    <!-- Page Content -->
    <div class="flex p-4 pt-20 bg-gray-50">
            <div class="p-6">
                <div class="mb-6">
                    <h1 class="text-2xl font-semibold text-gray-800">Reports</h1>
                </div>

                <!-- Reports Grid -->
                <div class="flex flex-col lg:flex-row gap-8 ml-8">
                    <!-- Report Card 1 -->
                    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 w-full lg:w-1/3">
                        <div class="flex items-start mb-4">
                            <div class="ml-4 flex-1">
                                <div class="flex items-center mb-4">
                                    <div class="w-14 h-14 bg-blue-500 rounded-full flex  items-center justify-center ml-14">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                            <polyline points="14 2 14 8 20 8"></polyline>
                                            <line x1="16" y1="13" x2="8" y2="13"></line>
                                            <line x1="16" y1="17" x2="8" y2="17"></line>
                                            <polyline points="10 9 9 9 8 9"></polyline>
                                        </svg>
                                    </div>
                                </div>
                                <div class="flex flex-col items-center justify-center">
                                    <h3 class="text-lg font-semibold text-gray-800">All Users</h3>
                                    <p class="text-sm text-gray-500 mt-1 mb-4">Posts, comments & likes count</p>
                                </div>
                                
                                <!-- Format Options -->
                                <div class="flex space-x-8 mb-4">
                                    <label class="flex items-center">
                                        <input type="radio" name="users_report_format" value="xlsx" class="h-4 w-4 text-blue-500 border-gray-300 focus:ring-blue-500">
                                        <span class="ml-2 text-sm text-gray-700">Excel</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="radio" name="users_report_format" value="csv" class="h-4 w-4 text-blue-500 border-gray-300 focus:ring-blue-500" checked>
                                        <span class="ml-2 text-sm text-gray-700">.CSV</span>
                                    </label>
                                </div>
                                
                                   <button class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-md transition duration-200" onclick="downloadReport('users_report')">Download</button>

                            </div>
                        </div>
                    </div>

                    <!-- Report Card 2 -->
                    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 w-full lg:w-1/3">
                        <div class="flex items-start mb-4">
                            <div class="ml-4 flex-1">
                                <div class="flex items-center mb-4">
                                    <div class="w-14 h-14 bg-blue-500 rounded-full flex items-center justify-center ml-14">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                            <polyline points="14 2 14 8 20 8"></polyline>
                                            <line x1="16" y1="13" x2="8" y2="13"></line>
                                            <line x1="16" y1="17" x2="8" y2="17"></line>
                                            <polyline points="10 9 9 9 8 9"></polyline>
                                        </svg>
                                    </div>
                                </div>
                                <div class="flex flex-col items-center justify-center">
                                <h3 class="text-lg font-semibold text-gray-800">All Users</h3>
                                <p class="text-sm text-gray-500 mt-1 mb-4">Having more than 4 posts</p>
                                </div>
                                <!-- Format Options -->
                                <div class="flex space-x-8 mb-4">
                                    <label class="flex items-center">
                                        <input type="radio" name="active_users_report_format" value="xlsx" class="h-4 w-4 text-blue-500 border-gray-300 focus:ring-blue-500">
                                        <span class="ml-2 text-sm text-gray-700">Excel</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="radio" name="active_users_report_format" value="csv" class="h-4 w-4 text-blue-500 border-gray-300 focus:ring-blue-500" checked>
                                        <span class="ml-2 text-sm text-gray-700">.CSV</span>
                                    </label>
                                </div>
                                
                                   <button class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-md transition duration-200" onclick="downloadReport('active_users_report')">Download</button>

                            </div>
                        </div>
                    </div>

                    <!-- Report Card 3 -->
                    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 w-full lg:w-1/3">
                        <div class="flex items-start mb-4">
                            <div class="ml-4 flex-1">
                                <div class="flex items-center mb-4">
                                    <div class="w-14 h-14 bg-blue-500 rounded-full flex items-center justify-center ml-14">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                            <polyline points="14 2 14 8 20 8"></polyline>
                                            <line x1="16" y1="13" x2="8" y2="13"></line>
                                            <line x1="16" y1="17" x2="8" y2="17"></line>
                                            <polyline points="10 9 9 9 8 9"></polyline>
                                        </svg>
                                    </div>
                                </div>
                                 <div class="flex flex-col items-center justify-center">
                                <h3 class="text-lg font-semibold text-gray-800">Postwise Report</h3>
                                <p class="text-sm text-gray-500 mt-1 mb-4">Title/description,comments,likes</p>
                                </div>
                                <!-- Format Options -->
                                <div class="flex space-x-8 mb-4">
                                    <label class="flex items-center">
                                        <input type="radio" name="posts_report_format" value="xlsx" class="h-4 w-4 text-blue-500 border-gray-300 focus:ring-blue-500">
                                        <span class="ml-2 text-sm text-gray-700">Excel</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="radio" name="posts_report_format" value="csv" class="h-4 w-4 text-blue-500 border-gray-300 focus:ring-blue-500" checked>
                                        <span class="ml-2 text-sm text-gray-700">.CSV</span>
                                    </label>
                                </div>
                                   <button class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-md transition duration-200" onclick="downloadReport('posts_report')">Download</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          
    
        <script>
        function downloadReport(reportType) {
          const format = document.querySelector(`input[name="${reportType}_format"]:checked`).value;
          let url = "";


          switch (reportType) {
            case "users_report":
              url = `<%= users_report_admin_reports_path %>?format=${format}`;
              break;
            case "active_users_report":
              url = `<%= active_users_report_admin_reports_path %>?format=${format}`;
              break;
            case "posts_report":
              url = `<%= posts_report_admin_reports_path %>?format=${format}`;
              break;
          }


          window.location.href = url;
        }
        </script>
    
    
    </div>
  </div>
</div>