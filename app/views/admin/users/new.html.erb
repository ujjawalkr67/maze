<div class="flex bg-gray-50 h-screen">
  <!-- Left Navigation Sidebar -->
  <div class="w-64 bg-white flex flex-col fixed h-full z-10">
    <!-- Logo Section -->
    <div class="p-6 flex items-center">
      <img src="<%= asset_path('icon.svg')%>" class="w-8 h-8 text-purple-600" alt="logo">
      <span class="ml-2 text-xl font-semibold text-gray-800">Mazee</span>
    </div>

    <!-- Navigation Links -->
    <div class="flex-1 flex flex-col px-3">
      <%= link_to home_path, class: "flex items-center px-4 py-3 rounded-lg #{current_page?(home_path) ? 'bg-blue-500 text-white' : 'text-gray-700 hover:bg-gray-100'}" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
        <span class="ml-3 font-medium">Feed</span>
      <% end %>

      <% if current_user && current_user.has_role?(:admin) %>
        <%= link_to admin_root_path, class: "flex items-center px-4 py-3 rounded-lg mt-2 #{current_page?(admin_root_path) ? 'bg-blue-500 text-white' : 'text-gray-700 hover:bg-gray-100'}" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
          <span class="ml-3 font-medium">Manage Users</span>
        <% end %>

        <%= link_to admin_reports_path, class: "flex items-center px-4 py-3 rounded-lg mt-2 #{current_page?(admin_reports_path) ? 'bg-blue-500 text-white' : 'text-gray-700 hover:bg-gray-100'}" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <span class="ml-3 font-medium">Reports</span>
        <% end %>
      <% end %>

      <!-- Logout Button -->
      <% if user_signed_in? %>
        <%= button_to destroy_user_session_path, method: :delete, class: "flex items-center px-4 py-3 mt-6 text-gray-700 hover:bg-gray-100 rounded-lg w-full" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          <span class="ml-3 font-medium">Logout</span>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Main Content -->
  <div class="flex-1 flex flex-col ml-64">
    <!-- Top Header with Search -->
    <div class="bg-white p-4 flex items-center justify-between">
      <!-- Search Bar -->
      <div class="flex-1 max-w-3xl">
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <img src="<%= asset_path('search.svg')%>" class="w-5 h-5 text-gray-400" alt="search">
          </div>
          <input type="text" class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Search for something here...">
        </div>
      </div>

      <!-- User Profile -->
      <div class="flex items-center ml-2">
        <img src="<%= asset_path('icon.svg')%>" class="w-10 h-10 rounded-full" alt="profile">
        <% if user_signed_in? %>
  <span class="ml-3 text-gray-700 font-medium hidden md:block"><%= current_user.first_name %> <%= current_user.last_name %></span>
<% else %>
  <%= link_to "Sign In", new_user_session_path, class: "text-gray-700 font-medium ml-3 hover:underline" %>
<% end %>

      </div>
    </div>

    <!-- Page Content -->
    <div class="flex-1 p-6">

            <!-- Content -->
<main class="flex-1 overflow-y-auto p-6 bg-gray-50">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-xl font-medium text-gray-700 mb-6">Add Users</h2>

    <!-- Error Messages -->
    <% if @user.errors.any? %>
      <div class="bg-red-100 text-red-700 p-4 rounded-lg mb-4">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul class="list-disc pl-5">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Form -->
    <%= form_with model: @user, url: admin_users_path, local: true, class: "space-y-6" do |form| %>

      <!-- First row -->
      <div class="grid grid-cols-2 gap-6">
        <div>
          <%= form.text_field :first_name, placeholder: "Add First Name", required: true, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div>
          <%= form.text_field :last_name, placeholder: "Add Last Name", required: true, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>

      <!-- Second row -->
      <div class="grid grid-cols-2 gap-6">
        <div>
          <%= form.email_field :email, placeholder: "Email", required: true, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div>
          <%= form.text_field :phone_number, placeholder: "Phone Number", required: true, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>

      <!-- Third row -->
      <div class="grid grid-cols-2 gap-6">
        <div>
          <%= form.password_field :password, placeholder: "Password", required: true, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div>
          <%= form.password_field :password_confirmation, placeholder: "Confirm Password", required: true, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>

      <!-- Role Selection -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-3">Assign Role</label>
          <div class="grid grid-cols-2 gap-4">
            
            <!-- Admin Role Button -->
            <button type="button" id="admin_role_btn" 
              class="role-btn w-full py-2.5 px-4 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500"
              data-role="1">
              Admin
            </button>

            <!-- User Role Button -->
            <button type="button" id="user_role_btn" 
              class="role-btn w-full py-2.5 px-4 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500"
              data-role="2">
              User
            </button>

          </div>

          <!-- Hidden Radio Field to store selection -->
          <%= form.hidden_field :role_id, id: "selected_role" %>
        </div>


      <!-- Submit Button -->
      <div class="flex justify-between mt-8">
      <div class="flex items-center">
        <%= link_to "Back", admin_root_path, class: "ml-10 px-6 py-2.5 bg-gray-500 hover:bg-gray-600 text-white font-medium rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-500" %>
        </div>
        <%= form.submit "Create User", class: " m-10 px-6 py-2.5 bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>

      </div>

    <% end %>
  </div>
</main>

    </div>
  </div>
  </div>

  <script>
  document.addEventListener("DOMContentLoaded", function () {
    const roleButtons = document.querySelectorAll(".role-btn");
    const roleInput = document.getElementById("selected_role");

    roleButtons.forEach(button => {
      button.addEventListener("click", function () {
        // Remove active styles from all buttons
        roleButtons.forEach(btn => btn.classList.remove("bg-blue-500", "text-black", "border-blue-500"));

        // Add active style to the clicked button
        this.classList.add("bg-blue-500", "text-black", "border-blue-500");

        // Update the hidden input field with selected role
        roleInput.value = this.getAttribute("data-role");
      });
    });
  });
</script>
