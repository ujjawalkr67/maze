 <!-- Main Content -->
 <div class="flex-1 flex flex-col ">
  <!-- Top Header with Search -->
<div class="bg-white p-4 flex flex-col md:flex-row items-center  gap-y-4 md:gap-x-4 fixed top-0 left-0 md:left-64 right-0 h-auto md:h-16 z-10">
  <!-- Search Bar -->
  <div class="w-full md:flex-1 max-w-7xl">
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <img src="<%= asset_path('search.svg') %>" class="w-5 h-5 text-gray-400" alt="search">
      </div>
      <input 
        type="text" 
        class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
        placeholder="Search for something here..."
      >
    </div>
  </div>

  <!-- User Profile -->
  <div class="hidden md:flex items-center gap-x-2 md:ml-10">
    <img 
      src="<%= current_user.avatar.attached? ? url_for(current_user.avatar) : asset_path('icon.svg') %>" 
      class="md:w-8 md:h-10 rounded-full" 
      alt="profile"
    >
    <span class="ml-2 text-gray-700 font-medium hidden sm:block">
      <%= current_user.first_name %> <%= current_user.last_name %>
      <% if current_user.has_role?(:admin) %>
      <span class="block text-xs text-gray-500">Admin</span>
    <% end %>
    </span>
  </div>
</div>



    <!-- Page Content -->
<div class="flex-1 p-2 pt-20 bg-gray-100">

            <!-- Content -->
<main class="flex-1 overflow-y-auto p-6 bg-gray-100">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-xl font-medium text-gray-700 mb-6">Add Users</h2>

    <!-- Error Messages -->
    <% if @user.errors.any? %>
      <div class="bg-red-100 text-red-700 p-4 rounded-lg mb-4">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul class="list-disc pl-5">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Form -->
    <%= form_with model: @user, url: admin_users_path, local: true, class: "space-y-6" do |form| %>

      <!-- First row -->
      <div class="grid grid-cols-2 gap-6">
        <div>
          <%= form.text_field :first_name, placeholder: "Add First Name", required: true, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div>
          <%= form.text_field :last_name, placeholder: "Add Last Name", required: true, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>

      <!-- Second row -->
      <div class="grid grid-cols-2 gap-6">
        <div>
          <%= form.email_field :email, placeholder: "Email", required: true, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div>
          <%= form.text_field :phone_number, placeholder: "Phone Number", required: true, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>

      <!-- Third row -->
      <div class="grid grid-cols-2 gap-6">
        <div>
          <%= form.password_field :password, placeholder: "Password", required: true, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div>
          <%= form.password_field :password_confirmation, placeholder: "Confirm Password", required: true, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>

      <!-- Role Selection -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-3">Assign Role</label>
          <div class="grid grid-cols-2 gap-4">
            
            <!-- Admin Role Button -->
            <button type="button" id="admin_role_btn" 
              class="role-btn w-full py-2.5 px-4 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500"
              data-role="1">
              Admin
            </button>

            <!-- User Role Button -->
            <button type="button" id="user_role_btn" 
              class="role-btn w-full py-2.5 px-4 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500"
              data-role="2">
              User
            </button>

          </div>

          <!-- Hidden Radio Field to store selection -->
          <%= form.hidden_field :role_id, id: "selected_role" %>
        </div>


      <!-- Submit Button -->
      <div class="flex justify-between mt-8">
      <div class="flex items-center">
        <%= link_to "Back", admin_root_path, class: "ml-10 px-6 py-2.5 bg-gray-500 hover:bg-gray-600 text-white font-medium rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-500" %>
        </div>
        <%= form.submit "Create User", class: " m-10 px-6 py-2.5 bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>

      </div>

    <% end %>
  </div>
</main>

    </div>
  </div>
  </div>

  <script>
  document.addEventListener("DOMContentLoaded", function () {
    const roleButtons = document.querySelectorAll(".role-btn");
    const roleInput = document.getElementById("selected_role");

    roleButtons.forEach(button => {
      button.addEventListener("click", function () {
        // Remove active styles from all buttons
        roleButtons.forEach(btn => btn.classList.remove("bg-blue-500", "text-black", "border-blue-500"));

        // Add active style to the clicked button
        this.classList.add("bg-blue-500", "text-black", "border-blue-500");

        // Update the hidden input field with selected role
        roleInput.value = this.getAttribute("data-role");
      });
    });
  });
</script>
