<main class="fixed inset-0 w-screen h-screen flex items-center justify-center bg-cover bg-center overflow-hidden px-4" 
    style="background-image: url(<%= asset_path('loginbg.png') %>);">

  <!-- Navbar -->
    <nav class="absolute w-full h-[99px] left-0 top-0 bg-white/5 flex items-center px-6">
      <!-- Logo Frame -->
      <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center">
          <img src="<%= asset_path('loginicon.svg') %>" alt="Logo" class="w-10 h-10">
      </div>
      
      <!-- Text 'Maze' -->
      <div class="ml-6 text-white text-3xl font-semibold font-serif">Maze</div>
    </nav>
    <hr class="absolute w-full left-0 top-[99px] h-[1px] bg-gradient-to-r from-[#377DFF] to-white border-0 z-10">

    <div class="absolute w-[1200px] h-[600px] left-1/2 top-[180px] transform -translate-x-1/2 
                bg-gradient-to-br from-white/20 to-transparent 
                backdrop-blur-[21px] rounded-[16px] flex flex-col items-end p-8 space-y-4 text-left">
        <div class="w-full max-w-[750px] flex flex-col items-start space-y-4">
        <h2 class="text-white text-3xl font-semibold font-[Poppins] pl-4">Create account</h2>
        <p class="text-[#F9FAFB] text-sm font-[Montserrat] pl-4">For business, band or celebrity.</p>

        <!-- Form Fields -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
            <% if resource.errors.any? %>
            <% first_error = resource.errors.full_messages.first %>
            <div id="error-popup" class="alert alert-danger text-base font-bold text-red-600 px-4 py-2 rounded-md shadow-md mb-4 text-center">
                <%= first_error %>
            </div>
            <% end %>

        <div class="grid grid-cols-2 gap-6 w-full max-w-[750px]">
            <div class="flex flex-col">
                <%= f.label :first_name, "First Name", class: "text-[#F9FAFB] text-sm font-[Montserrat]" %>
                <%= f.text_field :first_name, class: "w-full h-10 px-3 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#377DFF]" %>
            </div>
            
            <!-- Last Name -->
            <div class="flex flex-col">
                <%= f.label :last_name, "Last Name", class: "text-[#F9FAFB] text-sm font-[Montserrat]" %>
                <%= f.text_field :last_name, class: "w-full h-10 px-3 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#377DFF]" %>
            </div>
            
            <!-- Email -->
            <div class="flex flex-col">
                <%= f.label :email, "Email", class: "text-[#F9FAFB] text-sm font-[Montserrat]"%>
                <%= f.email_field :email,  class: "w-full h-10 px-3 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#377DFF]"%>
            </div>
            
            <!-- Phone Number -->
            <div class="flex flex-col">
                <%= f.label :phone_number, "Phone Number", class: "text-[#F9FAFB] text-sm font-[Montserrat]"%>
                <%= f.text_field :phone_number, class: "w-full h-10 px-3 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#377DFF]"%>
            </div>
            
            <!-- Password -->
            <div class="flex flex-col">
                <%= f.label :password, "Password", class: "text-[#F9FAFB] text-sm font-[Montserrat]" %>
                <%= f.password_field :password, autocomplete: "new-password", class: "w-full h-10 px-3 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#377DFF]" %>
            </div>
            
            <!-- Confirm Password -->
            <div class="flex flex-col">
               <%= f.label :password_confirmation, "Confirm Password", class: "text-[#F9FAFB] text-sm font-[Montserrat]" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full h-10 px-3 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#377DFF]" %>
            </div>
        </div>

        <!-- Profile Picture Upload -->
        <div class="flex flex-col w-full max-w-[750px] pl-4">
            <%= f.label :avatar, "Upload Profile Picture", class: "text-[#F9FAFB] text-sm font-[Montserrat]" %>
            <%= f.file_field :avatar, accept: "image/png, image/jpeg", class: "w-full h-10 px-3 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#377DFF]" %>
        </div>

        <!-- Terms and Privacy Policy Checkbox -->
        <div class="flex items-center gap-3 w-full max-w-[750px] pl-4 class: text-[#F9FAFB] text-sm font-[Montserrat]">
           <%= check_box_tag "terms", "1", false, class: "w-4 h-4" %>
            <%= label_tag "terms", "I agree to the Terms and Services" %>
        </div>

        <!-- Signup Button -->
        <%= f.submit "Sign Up", class: "w-52 h-12 bg-[#377DFF] text-white text-lg font-semibold rounded-md hover:bg-[#265BCC] ml-4" %>
      <% end %>

        <!-- Already have an account? -->
        <p class="text-[#FFFFFF] text-sm font-[Montserrat] pl-4">Already have an account?  <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-500 hover:underline" %></p>
        </div>
    </div>

</main>
