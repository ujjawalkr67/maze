<h2 class="text-2xl font-bold text-center mb-4">Login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email, "Email", class: "block font-medium" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg focus:outline-none" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, "Password", class: "block font-medium" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded-lg focus:outline-none" %>
  </div>

  <div class="mb-4 flex items-center">
    <%= f.check_box :remember_me, class: "mr-2" %>
    <%= f.label :remember_me, "Remember me" %>
  </div>

  <div class="actions text-center">
    <%= f.submit "Login", class: "bg-blue-500 text-black px-6 py-2 rounded-lg hover:bg-blue-600 w-full" %>
  </div>
<% end %>

<p class="mt-4 text-center">
  Don't have an account?
  <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-500 hover:underline" %>
</p>
