<main class="fixed inset-0 w-screen h-screen flex items-center justify-center bg-cover bg-center overflow-hidden px-4" 
      style="background-image: url(<%= asset_path('loginbg.png') %>);">

    <!-- Navbar -->
    <nav class="absolute w-full h-[99px] left-0 top-0 bg-white/5 flex items-center px-6">
        <!-- Logo Frame -->
        <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center">
            <img src="<%= asset_path('loginicon.svg') %>" alt="Logo" class="w-10 h-10">
        </div>
        
        <!-- Text 'Maze' -->
        <div class="ml-6 text-white text-3xl font-semibold font-serif">Maze</div>
    </nav>

  <!-- Thin Blue Line Under Navbar -->
   <hr class="absolute w-full left-0 top-[99px] h-[1px] bg-gradient-to-r from-[#377DFF] to-white border-0">

  <!-- Centered Login Form -->
<div class="w-[420px] md:w-[440px] p-6 md:p-8 h-[540px] md:h-[540px] rounded-2xl backdrop-blur-md bg-white/15 shadow-lg flex flex-col items-start justify-center mt-[-40px]">

    <!-- Login Title (Left-aligned) -->
    <h1 class="text-2xl md:text-3xl font-medium text-white mb-6">Login</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col w-full gap-6" }) do |f| %>
      <% if flash[:alert] %>
        <div class="alert alert-danger text-base text-red-600 pb-2 text-center">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <!-- Email Field -->
      <div class="flex flex-col gap-1">
        <%= f.label :email, "Email", class: "block text-sm md:text-base font-light text-white" %>
        <div class="flex items-center rounded-lg bg-white outline-none focus-within:ring-2 focus-within:ring-[#377DFF]">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "w-full py-2 px-3 text-base text-gray-900 placeholder-gray-400 focus:outline-none md:text-lg", placeholder: "Email" %>
        </div>
      </div>

      <!-- Password Field -->
      <div class="flex flex-col gap-1">
        <%= f.label :password, "Password", class: "block text-sm md:text-base font-light text-white" %>
        <div class="flex items-center rounded-lg bg-white outline-none focus-within:ring-2 focus-within:ring-[#377DFF]">
          <%= f.password_field :password, autocomplete: "current-password", required: true, class: "w-full py-2 px-3 text-base text-gray-900 placeholder-gray-400 focus:outline-none md:text-lg", placeholder: "Password" %>
        </div>
      </div>

      <!-- Remember Me -->
      <div class="flex items-center gap-2">
        <% if devise_mapping.rememberable? %>
          <label class="flex items-center gap-2 cursor-pointer text-white">
            <%= f.check_box :remember_me, class: "" %>
            <span class="text-sm md:text-base">Remember me</span>
          </label>
        <% end %>
      </div>

      <!-- Login Button -->
      <div>
        <%= f.submit "Login", class: "w-full bg-[#377DFF] hover:bg-[#2b66d2] text-white py-2 px-6 rounded-md text-base md:text-lg font-medium hover:cursor-pointer" %>
      </div>

    <% end %>

    <p class="text-sm md:text-base font-light text-white text-center mt-4">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class:"text-[#377DFF] font-medium"%></p>

  </div>

</main>
