 <!-- Main Content -->
 <div class="flex-1 flex flex-col ">
<!-- Top Header with Search -->
<div class="bg-white p-4 flex flex-col md:flex-row items-center  gap-y-4 md:gap-x-4 fixed top-0 left-0 md:left-64 right-0 h-auto md:h-16 z-10">
  <!-- Search Bar -->
  <div class="w-full md:flex-1 max-w-7xl">
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <img src="<%= asset_path('search.svg') %>" class="w-5 h-5 text-gray-400" alt="search">
      </div>
      <input 
        type="text" 
        class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
        placeholder="Search for something here..."
      >
    </div>
  </div>

  <!-- User Profile -->
  <div class="hidden md:flex items-center gap-x-2 md:ml-10">
    <img 
      src="<%= current_user.avatar.attached? ? url_for(current_user.avatar) : asset_path('icon.svg') %>" 
      class="md:w-8 md:h-10 rounded-full" 
      alt="profile"
    >
    <span class="ml-2 text-gray-700 font-medium hidden sm:block">
      <%= current_user.first_name %> <%= current_user.last_name %>
      <% if current_user.has_role?(:admin) %>
      <span class="block text-xs text-gray-500">Admin</span>
    <% end %>
    </span>
  </div>
</div>


    <!-- Page Content -->
    <div class="flex-1 p-2 pt-20 bg-white">
      
    <main class="flex flex-col gap-4 bg-gray-200 rounded-2xl p-4 sm:p-6 md:p-8">
    <form action="<%= edit_post_path(@post) %>" method="post" class="flex flex-col items-center justify-center bg-white rounded-2xl p-4 sm:p-6 md:p-8 shadow-md">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag "_method", "patch" %>

      <div class="flex flex-col gap-y-5 w-full">
        

        <!-- Description Input -->
        <div>
          <label for="post_description" class="block text-sm sm:text-base font-medium text-gray-900">Mazee Post</label>
          <div class="mt-2">
            <input type="text" name="post[description]" id="post_description" value="<%= @post.description %>" required
              class="block w-full rounded-md bg-white p-2 sm:p-3 text-sm sm:text-base text-gray-900 border border-gray-300 focus:border-indigo-600 focus:ring-2 focus:ring-indigo-600 placeholder-gray-400"
              placeholder="Enter a short description...">
          </div>
        </div>    

        <!-- Public/Private Checkbox -->
        <div class="flex items-center gap-2">
          <input type="hidden" name="post[public]" value="false"> 
          <input type="checkbox" name="post[public]" id="post_public" value="true" <%= "checked" if @post.public %> 
            class="w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
          <label for="post_public" class="text-sm sm:text-base font-medium text-gray-900">Make Public</label>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col md:flex-row justify-between gap-4">
          <div class="flex justify-around gap-4 md:gap-6 flex-wrap">
            <div class="flex items-center gap-2 hover:cursor-pointer">
              <img src="<%= asset_path('video.svg')%>" class="w-6 sm:w-8" alt="">
              <p class="text-xs sm:text-sm md:text-lg">Live Video</p>
            </div>
            <div class="flex items-center gap-2 hover:cursor-pointer">
              <img src="<%= asset_path('image.svg')%>" class="w-6 sm:w-8" alt="">
              <p class="text-xs sm:text-sm md:text-lg">Photo/Video</p>
            </div>
            <div class="flex items-center gap-2 hover:cursor-pointer">
              <img src="<%= asset_path('smile.svg')%>" class="w-6 sm:w-8" alt="">
              <p class="text-xs sm:text-sm md:text-lg">Feeling</p>
            </div>
          </div>

          <div class="w-full md:w-auto">
            <button type="submit" class="w-full md:w-auto bg-[#377DFF] hover:bg-blue-700 text-white py-3 px-6 rounded-lg text-sm sm:text-lg font-medium hover:cursor-pointer">Update</button>
          </div>
        </div>
      </div>
    </form>

    </main>

    </div>
  </div>
</div>