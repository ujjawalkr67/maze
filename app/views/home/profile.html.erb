<div class="flex bg-gray-50 h-screen">
 <!-- Mobile Menu Button -->
   <div class="fixed top-4 left-4 z-30 md:hidden" x-data="{ open: false }">
     <button @click="open = !open" class="p-2 bg-white rounded-lg shadow-md">
       <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
       </svg>
     </button>
    
     <!-- Mobile Navigation Dropdown -->
     <div x-show="open" @click.outside="open = false" x-cloak
          class="absolute top-12 left-0 w-64 bg-white rounded-lg shadow-lg p-4 z-40">
       <!-- Logo Section -->
       <div class="p-4 flex items-center border-b border-gray-200 mb-4">
         <img src="<%= asset_path('icon.svg')%>" class="w-8 h-8 text-purple-600" alt="logo">
         <span class="ml-2 text-xl font-semibold text-gray-800">Mazee</span>
       </div>
      
       <!-- Navigation Links -->
       <div class="flex flex-col space-y-2">
         <%= link_to home_path, class: "flex items-center px-4 py-3 rounded-lg #{request.path == home_path || request.path == '/' || request.path.match?(/^\/posts\/\d+(\/edit)?$/) ? 'bg-blue-500 text-white' : 'text-gray-700 hover:bg-gray-100'}" do %>
           <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
           </svg>
           <span class="ml-3 font-medium">Feed</span>
           <% end %>

         <%= link_to profile_path, class: "flex items-center px-4 py-3 rounded-lg #{request.path == profile_path ? 'bg-blue-500 text-white' : 'text-gray-700 hover:bg-gray-100'}" do %><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <span class="ml-3 font-medium">Profile</span>
          <%end%>
        
         <!-- Admin Links (conditionally shown) -->
         <% if current_user && current_user.has_role?(:admin) %>
          <%= link_to admin_root_path, class: "flex items-center px-4 py-3 rounded-lg mt-2 #{current_page?(admin_root_path) ? 'bg-blue-500 text-white' : 'text-gray-700 hover:bg-gray-100'}" do %>
           <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
           </svg>
           <span class="ml-3 font-medium">Manage Users</span>
         <% end %>
        
         <%= link_to admin_reports_path, class: "flex items-center px-4 py-3 rounded-lg mt-2 #{current_page?(admin_reports_path) ? 'bg-blue-500 text-white' : 'text-gray-700 hover:bg-gray-100'}" do %>
           <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
           </svg>
           <span class="ml-3 font-medium">Reports</span>
         <%end%>
        <% end %>
         <!-- Logout Button -->
         <% if user_signed_in? %>
        <%= button_to destroy_user_session_path, method: :delete, class: "flex items-center px-4 py-3 mt-6 text-gray-700 hover:bg-gray-100 rounded-lg w-full" do %>
             <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
           </svg>
           <span class="ml-3 font-medium">Logout</span>
         <%end%>
         <%end%>
       </div>
     </div>
   </div>


   <!-- Left Navigation Sidebar (Desktop) -->
   <div class="w-64 bg-white flex-col h-screen z-50 hidden md:flex">
     <!-- Logo Section -->
     <div class="p-6 flex items-center">
       <img src="<%= asset_path('icon.svg')%>" class="w-8 h-8 text-purple-600" alt="logo">
       <span class="ml-2 text-xl font-semibold text-gray-800">Mazee</span>
     </div>


     <!-- Navigation Links -->
     <div class="flex-1 flex flex-col px-3">
       <%= link_to home_path, class: "flex items-center px-4 py-3 rounded-lg #{request.path == home_path || request.path == '/' || request.path.match?(/^\/posts\/\d+(\/edit)?$/) ? 'bg-blue-500 text-white' : 'text-gray-700 hover:bg-gray-100'}" do %>
         <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
         </svg>
         <span class="ml-3 font-medium">Feed</span>
        <% end %>
        <%= link_to profile_path, class: "flex items-center px-4 py-3 rounded-lg #{request.path == profile_path ? 'bg-blue-500 text-white' : 'text-gray-700 hover:bg-gray-100'}" do %><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <span class="ml-3 font-medium">Profile</span>
          <%end%>



       <% if current_user && current_user.has_role?(:admin) %>
        <%= link_to admin_root_path, class: "flex items-center px-4 py-3 rounded-lg mt-2 #{current_page?(admin_root_path) ? 'bg-blue-500 text-white' : 'text-gray-700 hover:bg-gray-100'}" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
         </svg>
         <span class="ml-3 font-medium">Manage Users</span>
       <% end %>


      <%= link_to admin_reports_path, class: "flex items-center px-4 py-3 rounded-lg mt-2 #{current_page?(admin_reports_path) ? 'bg-blue-500 text-white' : 'text-gray-700 hover:bg-gray-100'}" do %>
         <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
         </svg>
         <span class="ml-3 font-medium">Reports</span>
       <%end%>
      <% end %>


       <!-- Logout Button -->
        <% if user_signed_in? %>
        <%= button_to destroy_user_session_path, method: :delete, class: "flex items-center px-4 py-3 mt-6 text-gray-700 hover:bg-gray-100 rounded-lg w-full" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
         </svg>
         <span class="ml-3 font-medium">Logout</span>
       <%end%>
       <%end%>
     </div>
   </div>


 <!-- Main Content -->
 <div class="flex-1 flex flex-col ">
   <!-- Top Header with Search -->
   <div class="bg-white p-4 flex items-center justify-between gap-x-4 fixed top-0 left-64 right-0 h-16 z-10">
     <!-- Search Bar -->
     <div class="flex-1 max-w-3xl ">
       <div class="relative">
         <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
           <img src="<%= asset_path('search.svg')%>" class="w-5 h-5 text-gray-400" alt="search">
         </div>
         <input type="text" class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Search for something here...">
       </div>
     </div>


     <!-- User Profile -->
     <div class="flex items-center ml-2 gap-x-2">
       <img src="<%= current_user.avatar.attached? ? url_for(current_user.avatar) : asset_path('icon.svg') %>" class="w-10 h-10 rounded-full" alt="profile">
       <span class="ml-3 text-gray-700 font-medium hidden md:block"><%= current_user.first_name %> <%= current_user.last_name %></span>
     </div>
   </div>
    <!-- Page Content -->
    <div class="flex-1 p-2 pt-20 bg-white">
        
        <div class="container mx-auto px-4 py-8">
        <!-- Profile Card -->
        <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-blue-500 to-purple-600 px-6 py-4">
                <h1 class="text-white text-2xl font-bold">User Profile</h1>
            </div>
            
            <!-- Profile Content -->
            <div class="md:flex">
                <!-- Left Column - Profile Image -->
                <div class="md:w-1/3 p-6 flex flex-col items-center">
                    <div class="w-48 h-48 rounded-full overflow-hidden border-4 border-white shadow-lg mb-4">
                        <img src="<%= current_user.avatar.attached? ? url_for(current_user.avatar) : asset_path('icon.svg') %>" alt="User Profile" class="w-full h-full object-cover">
                    </div>
                    
                    <h2 class="text-2xl font-bold text-gray-800"><%= current_user.first_name %> <%= current_user.last_name %></h2>
                    <p class="text-gray-600 mb-4">@<%= current_user.first_name %></p>
                    
                    <div class="flex space-x-4 mt-2">
                        <div class="text-center">
                            <p class="text-3xl font-bold text-blue-600"><%= current_user.posts.count %></p>
                            <p class="text-sm text-gray-500">Posts</p>
                        </div>
                        <div class="text-center">
                            <p class="text-3xl font-bold text-purple-600"><%= current_user.likes.count %></p>
                            <p class="text-sm text-gray-500">Likes</p>
                        </div>
                    </div>
                </div>
                
                <!-- Right Column - User Details -->
                <div class="md:w-2/3 p-6 border-t md:border-t-0 md:border-l border-gray-200">
                    <h3 class="text-xl font-semibold text-gray-800 mb-4">Contact Information</h3>
                    
                    <div class="space-y-4">
                        <div class="flex items-center">
                            <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center mr-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">Email</p>
                                <p class="text-gray-800"><%= current_user.email %></p>
                            </div>
                        </div>
                        
                        <div class="flex items-center">
                            <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center mr-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">Phone</p>
                                <p class="text-gray-800">+1 <%= current_user.phone_number %></p>
                            </div>
                        </div>
                        
                        <div class="flex items-center">
                            <div class="w-10 h-10 rounded-full bg-yellow-100 flex items-center justify-center mr-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">Location</p>
                                <p class="text-gray-800">Delhi, India</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Stats Cards -->
                    <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                            <div class="flex items-center">
                                <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center mr-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Total Posts</p>
                                    <p class="text-2xl font-bold text-gray-800"><%= current_user.posts.count %></p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                            <div class="flex items-center">
                                <div class="w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center mr-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Total Likes</p>
                                    <p class="text-2xl font-bold text-gray-800"><%= current_user.likes.count %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Footer -->
            <div class="bg-gray-50 px-6 py-4 border-t border-gray-200">
                <p class="text-center text-gray-500 text-sm">Last updated: <%= current_user.updated_at %></p>
            </div>
        </div>
    </div>

    </div>
  </div>
</div>